    cursor: pointer;
    font-size: 28px;
    color: #121212;
    z-index: 2000;
    transition: background-color 0.3s ease;
  }
  #chatButton:hover {
    background: #00cc72;
  }

  #chatWindow {
    position: fixed;
    bottom: 90px;
    right: 20px;
    width: 320px;
    max-height: 400px;
    background: #1e1e1e;
    border-radius: 10px;
    box-shadow: 0 0 15px #00ff90;
    display: none;
    flex-direction: column;
    z-index: 2000;
  }
  #chatHeader {
    background: #00ff90;
    color: #121212;
    padding: 10px;
